<p id="notice"><%= notice %></p>

<h1>Customer Requests</h1>

<table>
  <thead>
    <tr>
      <th>User profile</th>
      <th>Flower type</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_requests.each do |customer_request| %>
      <tr>
        <td><%= customer_request.user_profile_id %></td>
        <td><%= customer_request.flower_type_id %></td>
        <td><%= customer_request.quantity %></td>
        <td><%= link_to 'Show', customer_request %></td>
        <td><%= link_to 'Edit', edit_customer_request_path(customer_request) %></td>
        <td><%= link_to 'Destroy', customer_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer Request', new_customer_request_path %>
