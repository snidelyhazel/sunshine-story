<h1 class="welcome">Welcome to</h1>
<h1 class="sunshine">Sunshine Story</h1>

<div class="user-option">

  <div class="stats-panel">
    Do you already have an account?
    <%= form_tag "/user_profiles/login" do %>
      <%= text_field_tag :username_string %>
      <%= submit_tag "Login" %>
    <% end %>
  </div>

  <div class="stats-panel">
    Do you need to make an account?
    <%= form_tag "/user_profiles/signup" do %>
      <%= text_field_tag :username_string %>
      <%= submit_tag "Signup" %>
    <% end %>
  </div>

</div>
